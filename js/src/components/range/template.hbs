<style>
    .range{
        position: relative;
        cursor: ew-resize;
    }

    .range-total{
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 8px;
        background: #FFFFFF;
        border-radius: 5px;
    }

    .range-current{
        width: 0;
        height: 4px;
        background-color: #E7564D;
        position: absolute;
        top: 3px;
        left: 0;
        border-radius: 3px;
        pointer-events: none;
    }

    .range-control{
        position: relative;
        width: 0;
        height: 0;
        background-color: #000;
        position: absolute;
        top: 4px;
        left: 0;
        cursor: pointer;
    }

    .range-control:after{
        position: absolute;
        left: -9px;
        top: -9px;
        content: '';
        width: 18px;
        height: 18px;
        background-color: #E7564D;
        border-radius: 100%;
        pointer-events: none;
    }
</style>

<div class="range">
    <div class="range-total">
        <div class="range-current"></div>
        <div class="range-control"></div>
    </div>
</div>