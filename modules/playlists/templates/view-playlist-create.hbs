<div id="modal-playlist-create" class="modal">
	<div class="modal-offset">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close cancel">x</button>
				<h2>Create playlist</h2>
			</div>
			<div class="modal-body">
				<form role="form">
					<fieldset class="form-group">
						<label>Name</label>
						<input name="playlist-create-name" type="text" placeholder="enter a name...">
					</fieldset>
					<fieldset class="form-group">
						<label>Description</label>
						<input name="playlist-create-description" type="text" placeholder="enter a description...">
					</fieldset>
					<button type="button" class="btn cancel">Close</button>
					<button type="button" class="btn blue save">Save changes</button>
				</form>
			</div>
		</div>
	</div>
</div>